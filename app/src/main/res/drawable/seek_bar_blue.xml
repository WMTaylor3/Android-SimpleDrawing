<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="line">
            <stroke
                android:color="@color/slider_background"
                android:width="@dimen/slider_bar"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/slider_progress_blue"
                    android:width="@dimen/slider_bar"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:color="@color/slider_secondary"
                    android:width="@dimen/slider_bar"/>
            </shape>
        </clip>
    </item>
</layer-list>